# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# i3-gaps configuration

for_window [class="^.*"] border pixel 5
gaps inner 30
gaps outer 0
smart_gaps on

set $mode_gaps Gaps: (o) outer, (i) inner
set $mode_gaps_outer Outer Gaps: +|-|0 (local), Shift + +|-|0 (global)
set $mode_gaps_inner Inner Gaps: +|-|0 (local), Shift + +|-|0 (global)
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
        bindsym o      mode "$mode_gaps_outer"
        bindsym i      mode "$mode_gaps_inner"
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

mode "$mode_gaps_inner" {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode "$mode_gaps_outer" {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# color variables for bar and windows
# (colors below are as follows: 
# 282F39 - Title bar from ARC 
# LA2227 - Border from ARC 
# 373D48 - Side bar from ARC 
# 5294E2 - Active from ARC 
# D1D3D8 - Alternative Side bar (white) from ARC 
# CC575D - Urgent From ARC 

set $border-color-focused              #5294E2
set $border-color-focused_inactive     #D1D3D8
set $border-color-unfocused            #LA2227
set $border-color-urgent               #CC575D
set $border-color-placeholder          #00FF00
set $border-color-background           #282f39
set $background-color-focused          #5294E2
set $background-color-focused_inactive #D1D3D8
set $background-color-unfocused        #LA2227
set $background-color-urgent           #CC575D
set $background-color-placeholder      #00FF00 
set $background-color-background       #282f39
set $text-color-focused                #FFFFFF
set $text-color-focused_inactive       #FFFFFF
set $text-color-unfocused              #282f39
set $text-color-urgent                 #FFFFFF
set $text-color-placeholder            #FFFFFF
set $text-color-background             #FFFFFF

#                       border                         background                         text                         indicator
client.focused          $border-color-focused          $background-color-focused          $text-color-focused          #CC575D
client.focused_inactive $border-color-focused_inactive $background-color-focused_inactive $text-color-focused_inactive #CC575D
client.unfocused        $border-color-unfocused        $background-color-unfocused        $text-color-unfocused        #CC575D
client.urgent           $border-color-urgent           $background-color-urgent           $text-color-urgent           #CC575D
client.placeholder      $border-color-placeholder      $background-color-placeholder      $text-color-placeholder      #CC575D
client.background       $border-color-background       $background-color-background       $text-color-background       #CC575D

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c "/home/rklm/.config/i3/i3blocks.conf"
        colors {
                #                  background
                background         $background-color-background
                #                  text
                statusline         $text-color-focused
                separator          $border-color-unfocused
                #                  border                         background                         text
                focused_workspace  $border-color-focused          $background-color-focused          $text-color-focused
                active_workspace   $border-color-focused_inactive $background-color-focused_inactive $text-color-focused_inactive
                inactive_workspace $border-color-unfocused        $background-color-unfocused        $text-color-unfocused
                urgent_workspace   $border-color-urgent           $background-color-urgent           $text-color-urgent
                binding_mode       $border-color-urgent           $background-color-urgent           $text-color-urgent
        }
        font pango:DroidSansMono 10
        tray_output primary
}

